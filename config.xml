<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hugpro.KingQueenJack" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>KingQueenJack</name>
    <description>
        A game idea by a 4-year-old girl.
		First to draw the agreed card face (King, Queen, or Jack) wins.
    </description>
    <author email="ebhugo@up.edu.ph">
        Hug Pro - Hugo Productions
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
	
	<icon src="res/icon.png" />
	
</widget>
